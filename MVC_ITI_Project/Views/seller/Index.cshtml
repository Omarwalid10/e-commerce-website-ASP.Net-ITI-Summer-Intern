@model Seller
@{
	List<Product> products = ViewData["products"] as List<Product> ;
}
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>seller  </h1>
					<h2 style="color:white">Hi <span clsas="d-block">@Model.Name</span></h2>
					<p></p>
					<p><a class="btn btn-secondary me-2"  asp-controller="products" asp-action="Create" asp-route-id="@Model.Id">Add New Product</a></p>
					<p>Click on any product to edit it's details</p>
				</div>
			</div>
			<div class="col-lg-7">
				<div class="hero-img-wrap">
					<img src="/images/couch.png" class="img-fluid">
				</div>
			</div>
		</div>
	</div>
</div>
@if (products != null)
{
	 
	<div class="untree_co-section product-section before-footer-section">
		<div class="container">
		    <div class="row">
				<h1 style="text-align:center">Your Products</h1>
				@foreach (var item in products)
				{
					@* <li>@item.price</li>
					<li>@item.name</li> *@
					<!-- Start Column 1 -->
					<div class="col-12 col-md-4 col-lg-3 mb-5">
						<a class="product-item" asp-controller="products" asp-action="Edit" asp-route-id="@item.Id">
							<img src="/images/Uploads/@item.image" class="img-fluid product-thumbnail">
							<h3 class="product-title">@item.name</h3>
							<strong class="product-price">@item.price</strong>

							<span class="icon-cross">
								<img src="/images/return.svg" class="img-fluid">
							</span>
						</a>
					</div>
				}
			</div>
		</div>
	</div>

}

